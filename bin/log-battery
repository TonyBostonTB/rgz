#!/bin/sh
while :
do
	echo "$(
	date +%Y%m%d-%H%M%S
	echo '|'
	top -1b|head -1|cut -c15-37
	top -1b|head -2|tail -1|cut -d: -f1
	top -1b|head -3|tail -1|cut -d, -f5
	echo '|'
	apm|cut -d: -f2-
	echo '|'
	sysctl -n hw.sensors.cpu0.temp
	sysctl -n hw.sensors.acpithinkpad0.fan0
	)"|tr '\n' ' '|sed 's/ \{2,\}/ /g'
	echo
	sleep 10
done
