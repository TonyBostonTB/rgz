#!/bin/sh
set -e
xrandr | grep 'HDMI-1 connected' || { >&2 echo 'HDMI-1 disconnected'; exit 1; }
# xrandr --output HDMI-1 --auto --output eDP-1 --auto --right-of HDMI-1
xrandr --output HDMI-1 --auto --output eDP-1 --off
xinput set-button-map 8 1 2 3 4 5 6 7
xinput set-prop 8 'Device Accel Constant Deceleration' 5
xrdb "$HOME/.Xdefaults"
echo 'Xft.dpi: 85' | xrdb -merge
echo 'XTerm*font: -misc-fixed-medium-r-normal--15-140-75-75-c-90-iso10646-1' | xrdb -merge
echo 'XTerm*faceName:' | xrdb -merge
pkill -HUP cwm
doas sysctl machdep.lidaction=0
