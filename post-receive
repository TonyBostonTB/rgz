#!/bin/sh
LC_CTYPE="en_US.UTF-8"
export LC_CTYPE

src="$(pwd)"
name=$(basename "$src")


# Check if git push is forced

force=0
while read -r old new ref; do
	[ "$old" = '0000000000000000000000000000000000000000' ] && continue
	[ "$new" = '0000000000000000000000000000000000000000' ] && continue
	hasrevs=$(git rev-list "$old" "^$new" | sed 1q)
	[ -n "$hasrevs" ] && { force=1; break; }
done


# Publish HTML files with stagit(1)

dst="/var/www/src/$(basename "$name" ".git")"
mkdir -p "$dst"
cd "$dst" || { echo "[post-receive] can't change to $dst"; exit 1; }

# Delete commit directory when push is forced
[ "$force" = "1" ] && rm -rf "commit"

repos="$(find "$src"/.. -maxdepth 2|grep '\.git$'|sed s#/\.git##|tr '\n' ' ')"
[ -n "$repos" ] && {
	echo "[stagit] building $(dirname "$src")"
	stagit-index $repos > "$dst"/../index.html
}

echo "[stagit] building $dst"
stagit "$src"
ln -sf log.html index.html
ln -sf ../style.css style.css
ln -sf ../logo.png logo.png


# Copy HEAD to raw directory

echo "[post-receive] copy HEAD to $dst/raw"
[ -d "$dst/raw" ] && rm -rf "$dst/raw"
mkdir -p "$dst/raw"
cd "$src" || { echo "[post-receive] can't change to $src"; exit 1; }
git archive --format=tar HEAD | (cd "$dst/raw" && tar xf -)


# Rebuild the website with ssg from raw

cd "$dst/raw" || { echo "[post-receive] can't change to $dst/raw"; exit 1; }
rm /var/www/htdocs/www.romanzolotarev.com/.files
"$HOME/bin/ssg2" . /var/www/htdocs/www.romanzolotarev.com 'Roman Zolotarev' 'https://www.romanzolotarev.com'

"$HOME/bin/rssg" "$dst/raw/index.md" > "/var/www/htdocs/www.romanzolotarev.com/rss.xml"
echo "[rss] $(grep -c '<item>' "/var/www/htdocs/www.romanzolotarev.com/rss.xml") items" >&2

"$HOME/bin/rssg" "$dst/raw/n/index.md" > "/var/www/htdocs/www.romanzolotarev.com/n/rss.xml"
echo "[n/rss] $(grep -c '<item>' "/var/www/htdocs/www.romanzolotarev.com/n/rss.xml") items" >&2


# Publish the repository

echo "[post-receive] clone ${src} repository to ${dst}.git"
[ -d "${dst}.git" ] && rm -rf "${dst}.git"
git clone --bare "$src" "${dst}.git"
# cd "${dst}.git" && git status #git update-server-info --bare
